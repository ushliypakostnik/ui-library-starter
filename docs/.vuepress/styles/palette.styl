@import "../../../src/stylus/_stylebase.styl"

// Import fonts
//////////////////////////////////////////////////////

@font-face {
  font-family: 'Ubuntu';
  src: url('/fonts/Ubuntu/Ubuntu-Regular.eot');
  src: local('Ubuntu Regular'), local('Ubuntu-Regular'),
    url('/fonts/Ubuntu/Ubuntu-Regular.eot?#iefix') format('embedded-opentype'),
    url('/fonts/Ubuntu/Ubuntu-Regular.woff2') format('woff2'),
    url('/fonts/Ubuntu/Ubuntu-Regular.woff') format('woff'),
    url('/fonts/Ubuntu/Ubuntu-Regular.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'Ubuntu';
  src: url('/fonts/Ubuntu/Ubuntu-Bold.eot');
  src: local('Ubuntu Bold'), local('Ubuntu-Bold'),
    url('/fonts/Ubuntu/Ubuntu-Bold.eot?#iefix') format('embedded-opentype'),
    url('/fonts/Ubuntu/Ubuntu-Bold.woff2') format('woff2'),
    url('/fonts/Ubuntu/Ubuntu-Bold.woff') format('woff'),
    url('/fonts/Ubuntu/Ubuntu-Bold.ttf') format('truetype');
  font-weight: 700;
  font-style: bold;
}

// Customization
//////////////////////////////////////////////////////

// Variables
$gutter = 20px
$borderColor = #eaecef
$colorTextLight = #b1b1b1

html,
body,
#app
  height: unset
  max-height: unset
  overflow: auto
  letter-spacing normal

body
  color $colors.text

#app
  padding-top 57px

.theme-container
  height 100%
  overflow-y auto

.page
  overflow-x hidden
  z-index 1000

  ul,
  p
    margin-top $gutter * 1.5 !important
    margin-bottom $gutter * 1.5 !important

    +$gadgets()
      margin-top $gutter !important
      margin-bottom $gutter !important

strong
  font-weight 700

.theme-default-content:not(.custom)
  +$desktop()
    padding-left $wrapper.gutter--desktop
    padding-right $wrapper.gutter--desktop

  +$tablet()
    padding-left $wrapper.gutter--tablet
    padding-right $wrapper.gutter--tablet

  +$mobile()
    padding-left $wrapper.gutter--mobile
    padding-right $wrapper.gutter--mobile

.theme-default-content:not(.custom),
.page-nav
  max-width 900px

  > h1
    font-size 54px
    color $colors.primary
    margin-bottom $gutter * 2 !important
    padding-top $gutter * 8
    padding-bottom round($gutter * 2/3)

    +$gadgets()
      padding-top $gutter * 4
      font-size 32px

  > h2
    color $colorTextLight
    font-size 32px
    padding-top $gutter * 5
    margin-bottom $gutter * 1.5
    padding-bottom round($gutter * 2/3)

    +$gadgets()
      padding-top $gutter * 4
      font-size 28px

  > h3
    font-size 28px
    padding-top $gutter * 4
    padding-bottom $gutter * 0.75

    +$gadgets()
      font-size 24px

  > h4
    margin-bottom ($gutter / 2)

.navbar
  z-index 3000

  .site-name
    color $colors.primary

    +$mobile()
      font-size 11px

a.sidebar-link
  font-size 15px
  line-height 1.4
  font-weight normal

  &:hover
    color $colors.primary

a.sidebar-link.active
  color $colors.primary
  border-left-color $colors.primary

.sidebar-sub-header a.sidebar-link
  font-size 12px

table
  thead
    tr th
      background rgba($colors.text, $opacites.psy)
      color #fff

  tr:nth-child(2n)
    background none

.theme-default-content:not(.custom) a.toolbar__button:hover
  text-decoration none

.custom-block
  margin-top 40px !important
  margin-bottom 40px !important

.extra-class
  background darken($colors.sea, 15%) !important


// Custom classes
//////////////////////////////////////////////////////

.code--path
  +$gadgets()
    font-size 9px !important

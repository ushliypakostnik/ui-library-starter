$accentColor = #818283
$textColor = #25313C
$borderColor = #eaecef
$codeBgColor = #3a3a3a
$badgeTip = #42b983
$badgeWarning = darken(#ffe564, 35%)
$badgeError = #DA596
$colorTextLight = #b1b1b1
$gutter = 20px

html,
body,
#app
  height: unset
  max-height: unset
  overflow: auto
  letter-spacing: normal;

#app
  padding-top 57px

.theme-container
  height 100%
  overflow-y auto

ul,
p
  margin-bottom $gutter * 1.5

strong
  font-weight 700

.theme-default-content:not(.custom),
.page-nav
  max-width 900px

  > h1
    font-size 54px
    color $accentColor
    padding-top $gutter * 8
    padding-bottom round($gutter * 2/3)

  > h2
    color $colorTextLight
    font-size 32px
    padding-top $gutter * 5
    margin-bottom $gutter * 1.5
    padding-bottom round($gutter * 2/3)

  > h3
    font-size 28px
    padding-top $gutter * 4
    padding-bottom $gutter * 0.75

  > h4
    margin-bottom ($gutter / 2)

.navbar
  z-index 3000

  .site-name
    color $accentColor

.page
  z-index 1000

table
  thead
    tr th
      background darken($borderColor, 12%)
      color #fff

  &.vdpTable
    display table
    margin 0

    thead tr
      border none

    tr:nth-child(2n)
      background none

    .vdpHeadCell,
    .vdpRow,
    .vdpCellContent,
    .vdpCell
      border none

    .vdpHeadCell
      background none

.vdpTimeUnit pre
  margin 0
  padding 2px

.extra-class
  margin-bottom $gutter * 1.5

  + p
    margin-top 50px

  .tooltip-inner.popover-inner &
    background transparent
    padding 10px 20px
    overflow auto
    margin 0
    height 100%

.tooltip-inner.popover-inner
  padding 0 !important

a.sidebar-link
  font-size: 0.95em;
  line-height: 1.4;
  font-weight: normal;

.theme-default-content:not(.custom) a.toolbar__button:hover {
  text-decoration: none;
}
